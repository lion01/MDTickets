<form
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_MDTICKETS_COMMON_NORECORDS"
>
	<headerset>
		<header name="mdtickets_item_id" type="selectrow" tdwidth="20" />
        <header name="mdtickets_item_id" type="fieldsearchable" tdwidth="20" />
		<header name="fromname" type="fieldsearchable" buttons="no" buttonclass="btn"/>
		<header name="created_on" type="field" sortable="true" tdwidth="8%" />
		<header name="subject" type="fieldsearchable" buttons="no" buttonclass="btn"/>
		<header name="enabled" type="published" sortable="true" tdwidth="8%" />
	</headerset>

	<fieldset name="items">
		<field name="mdtickets_item_id" type="selectrow"/>
        <field name="mdtickets_item_id" type="text"
               show_link="true"
               url="index.php?option=com_mdtickets&amp;view=item&amp;task=edit&amp;id=[ITEM:ID]"/>
		<field name="fromname" type="text"/>
		<field name="created_on" type="calendar"/>
		<field name="subject" type="text"/>
		<field name="enabled" type="published"/>
	</fieldset>
</form>