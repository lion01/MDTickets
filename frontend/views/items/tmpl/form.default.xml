<form
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_MDTICKETS_COMMON_NORECORDS"
>
	<headerset>
		<header name="mdtickets_item_id" type="selectrow" tdwidth="20" />
        <header name="short" type="fieldsearchable" buttons="no" buttonclass="btn"/>
        <header name="prio" sortable="true" type="fieldselectable" buttons="yes" buttonclass="btn"/>
		<header name="category" type="field" sortable="true" tdwidth="8%" />
		<header name="short" type="fieldsearchable" buttons="no" buttonclass="btn"/>
		<header name="status" type="field" sortable="true" tdwidth="8%" />
        <header name="Assigned" type="fieldsearchable" buttons="no" buttonclass="btn"/>
        <header name="deadline" type="field" buttons="no" buttonclass="btn"/>
	</headerset>

	<fieldset name="items">
		<field name="mdtickets_item_id" type="selectrow"/>
        <field name="short" type="text"
               show_link="true"
               url="index.php?option=com_mdtickets&amp;view=item&amp;task=edit&amp;id=[ITEM:ID]"/>
		<field name="prio" type="text"/>
		<field name="category" type="text"/>
		<field name="status" type="text"/>
        <field name="assigned" type="text"/>
        <field name="deadline" type="text"/>
	</fieldset>
</form>